{% comment %}
  WET by Lou - Glamorous Homepage Template
  Converted from React to Shopify Liquid
{% endcomment %}

{%- assign hero_image = settings.hero_image | default: 'https://customer-assets.emergentagent.com/job_wetbylou/artifacts/mb2g6ved_Bottle%20WET%201.%20PNG.png' -%}

<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-background"></div>
  <div class="container">
    <div class="hero-content">
      <div class="hero-text fade-in-up">
        <div class="hero-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
          </svg>
          <span>{{ settings.hero_badge_text | default: 'Luxury Hair Care' }}</span>
        </div>
        
        <h1 class="hero-large">
          {{ settings.hero_title_line1 | default: 'For the girls who' }}<br />
          <span class="glow-text">{{ settings.hero_title_line2 | default: 'glow wet.' }}</span>
        </h1>
        
        <div class="metallic-accent"></div>
        
        <p class="body-large">
          {{ settings.hero_description | default: 'Transform your ritual into art. Experience texture, scent, and sensuality in every drop. This is luxury redefined.' }}
        </p>
        
        <div class="hero-actions">
          <a href="{{ collections.all.url }}" class="btn-primary glow-pulse">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
            </svg>
            {{ settings.hero_primary_button | default: 'Shop The Collection' }}
          </a>
          
          <a href="{{ pages['about'].url }}" class="btn-secondary">
            {{ settings.hero_secondary_button | default: 'Discover The Story' }}
          </a>
        </div>
      </div>
      
      <div class="hero-visual fade-in-up">
        <div class="hero-product-showcase">
          <div class="product-float">
            {% if hero_image contains 'http' %}
              <img src="{{ hero_image }}" alt="WET by Lou Luxury Hair Care" class="hero-product-image shine-effect" />
            {% else %}
              {{ hero_image | image_url: width: 400 | image_tag: alt: 'WET by Lou Luxury Hair Care', class: 'hero-product-image shine-effect' }}
            {% endif %}
            <div class="product-glow"></div>
          </div>
          <div class="floating-elements">
            <div class="float-element float-1"></div>
            <div class="float-element float-2"></div>
            <div class="float-element float-3"></div>
          </div>
        </div>
      </div>
    </div>

    <div class="scroll-indicator" onclick="document.querySelector('.product-showcase-section').scrollIntoView({behavior: 'smooth'})">
      <div class="scroll-text">
        <span class="body-small text-metallic">Scroll to explore</span>
      </div>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="scroll-arrow glow-pulse">
        <polyline points="6 9 12 15 18 9"/>
      </svg>
    </div>
  </div>
</section>

<!-- Product Showcase Section -->
{% if collections.size > 0 %}
  <section id="products" class="product-showcase-section section-padding">
    <div class="showcase-background"></div>
    <div class="container">
      <div class="section-header fade-in-up">
        <div class="section-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
          </svg>
          <span>The Collection</span>
        </div>
        <h2 class="hero-medium">{{ settings.product_section_title | default: 'The Line-Up' }}</h2>
        <div class="metallic-accent" style="margin: 24px auto;"></div>
        <p class="body-large">
          {{ settings.product_section_description | default: 'Two carefully curated collections designed for different hair needs, but united by the same obsession with texture and scent.' }}
        </p>
      </div>

      {% comment %} Featured Collections {% endcomment %}
      <div class="collections-showcase fade-in-up">
        {% assign featured_collections = collections | where: 'published', true | limit: 2 %}
        
        <div class="collection-tabs">
          {% for collection in featured_collections %}
            <div class="collection-tab glass-card {% if forloop.first %}active{% endif %}" data-collection="{{ collection.handle }}">
              <div class="tab-icon">
                {% if forloop.first %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
                  </svg>
                {% else %}
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                  </svg>
                {% endif %}
              </div>
              <div class="tab-content">
                <h3 class="tab-title">{{ collection.title }}</h3>
                <p class="tab-description">{{ collection.description | strip_html | truncate: 50 }}</p>
              </div>
            </div>
          {% endfor %}
        </div>

        {% comment %} Products Grid {% endcomment %}
        <div class="products-grid fade-in-up">
          {% for collection in featured_collections limit: 1 %}
            {% for product in collection.products limit: 3 %}
              <div class="product-card glass-card">
                <div class="product-image-container">
                  {% if product.featured_media %}
                    {{ product.featured_media | image_url: width: 400 | image_tag: alt: product.title, class: 'product-image' }}
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'product-image' }}
                  {% endif %}
                  
                  <div class="product-overlay">
                    <div class="overlay-actions">
                      <button class="action-btn" title="Add to Wishlist">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                        </svg>
                      </button>
                      <button class="action-btn primary" title="Quick Add">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
                          <line x1="3" y1="6" x2="21" y2="6"/>
                          <path d="M16 10a4 4 0 0 1-8 0"/>
                        </svg>
                      </button>
                    </div>
                  </div>
                  
                  <div class="product-badge">
                    <span class="body-small">New</span>
                  </div>
                </div>
                
                <div class="product-info">
                  <div class="product-header">
                    <h3 class="heading-3">{{ product.title }}</h3>
                    <div class="product-price">
                      <span class="price-current">{{ product.price | money }}</span>
                    </div>
                  </div>
                  
                  <p class="body-regular product-description">{{ product.description | strip_html | truncate: 120 }}</p>
                  
                  <div class="product-benefits">
                    {% assign tags = product.tags | slice: 0, 2 %}
                    {% for tag in tags %}
                      <span class="benefit-tag">{{ tag }}</span>
                    {% endfor %}
                  </div>
                  
                  <a href="{{ product.url }}" class="btn-primary product-cta">
                    View Product • {{ product.price | money }}
                  </a>
                </div>
              </div>
            {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
{% endif %}

<!-- Newsletter Section -->
<section class="newsletter-section section-padding">
  <div class="container">
    <div class="newsletter-content glass-card glow-pulse fade-in-up">
      <div class="newsletter-header">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="newsletter-icon">
          <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
        </svg>
        <h3 class="heading-2 text-metallic">{{ settings.newsletter_title | default: 'Join the WET Circle' }}</h3>
        <p class="body-regular">
          {{ settings.newsletter_description | default: 'Be the first to know about new launches, exclusive rituals, and insider tips.' }}
        </p>
      </div>
      
      {% form 'customer' %}
        <div class="newsletter-form">
          <div class="form-group-inline">
            <input 
              type="email" 
              name="contact[email]"
              placeholder="Your email address"
              class="newsletter-input"
              required
            />
            <button type="submit" class="btn-primary newsletter-btn">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
              </svg>
              Subscribe
            </button>
          </div>
          <p class="newsletter-note">
            Join 10K+ women who glow wet ✨ Unsubscribe anytime.
          </p>
        </div>
      {% endform %}
    </div>
  </div>
</section>

