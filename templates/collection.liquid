{% comment %}
  WET by Lou - Collection Page Template
  Glamorous collection page with filtering and sorting
{% endcomment %}

{%- paginate collection.products by 12 -%}

<section class="collection-main">
  <div class="collection-background"></div>
  <div class="container">
    
    {%- comment -%} Collection Header {%- endcomment -%}
    <div class="collection-header fade-in-up">
      <div class="collection-info">
        <nav class="breadcrumb">
          <a href="{{ routes.root_url }}" class="breadcrumb-link">Home</a>
          <span class="breadcrumb-separator">/</span>
          <span class="breadcrumb-current">{{ collection.title }}</span>
        </nav>
        
        <h1 class="collection-title hero-medium">{{ collection.title }}</h1>
        
        {%- if collection.description != blank -%}
          <div class="collection-description">
            <div class="description-content glass-card">
              {{ collection.description }}
            </div>
          </div>
        {%- endif -%}
        
        <div class="metallic-accent"></div>
      </div>
      
      {%- if collection.featured_image -%}
        <div class="collection-featured-image">
          <div class="featured-image-container glass-card">
            {{ collection.featured_image | image_url: width: 600 | image_tag: 
              alt: collection.title, 
              class: 'collection-image shine-effect'
            }}
            <div class="image-glow glow-pulse"></div>
          </div>
        </div>
      {%- endif -%}
    </div>

    {%- comment -%} Collection Toolbar {%- endcomment -%}
    <div class="collection-toolbar glass-card fade-in-up">
      <div class="toolbar-left">
        <p class="collection-count">
          {%- if collection.products_count == 1 -%}
            {{ collection.products_count }} product
          {%- else -%}
            {{ collection.products_count }} products
          {%- endif -%}
        </p>
      </div>
      
      <div class="toolbar-right">
        {%- comment -%} Sort Dropdown {%- endcomment -%}
        <div class="sort-dropdown">
          <label for="SortBy" class="sort-label">Sort by:</label>
          <select name="sort_by" id="SortBy" class="sort-select">
            <option value="manual">Featured</option>
            <option value="best-selling" {% if collection.sort_by == collection.default_sort_by %}selected="selected"{% endif %}>Best selling</option>
            <option value="title-ascending" {% if collection.sort_by == 'title-ascending' %}selected="selected"{% endif %}>Alphabetically, A-Z</option>
            <option value="title-descending" {% if collection.sort_by == 'title-descending' %}selected="selected"{% endif %}>Alphabetically, Z-A</option>
            <option value="price-ascending" {% if collection.sort_by == 'price-ascending' %}selected="selected"{% endif %}>Price, low to high</option>
            <option value="price-descending" {% if collection.sort_by == 'price-descending' %}selected="selected"{% endif %}>Price, high to low</option>
            <option value="created-ascending" {% if collection.sort_by == 'created-ascending' %}selected="selected"{% endif %}>Date, old to new</option>
            <option value="created-descending" {% if collection.sort_by == 'created-descending' %}selected="selected"{% endif %}>Date, new to old</option>
          </select>
        </div>
      </div>
    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    {%- if collection.products.size > 0 -%}
      <div class="collection-products fade-in-up">
        <div class="products-grid">
          {%- for product in collection.products -%}
            <div class="product-card glass-card hover-lift">
              <a href="{{ product.url }}" class="product-link">
                <div class="product-image-container">
                  {%- if product.featured_media -%}
                    {{ product.featured_media | image_url: width: 400 | image_tag: 
                      alt: product.title, 
                      class: 'product-image'
                    }}
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'product-image' }}
                  {%- endif -%}
                  
                  {%- comment -%} Product Badges {%- endcomment -%}
                  {%- if product.available == false -%}
                    <div class="product-badge sold-out">Sold Out</div>
                  {%- elsif product.compare_at_price > product.price -%}
                    <div class="product-badge sale">Sale</div>
                  {%- elsif product.created_at > 'now' | date: '%s' | minus: 2592000 -%}
                    <div class="product-badge new">New</div>
                  {%- endif -%}
                  
                  {%- comment -%} Quick Actions {%- endcomment -%}
                  <div class="product-actions">
                    <button class="action-btn wishlist-btn" title="Add to Wishlist">
                      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                      </svg>
                    </button>
                    
                    <button class="action-btn quick-view-btn" title="Quick View">
                      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                        <circle cx="12" cy="12" r="3"/>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <div class="product-info">
                  <h3 class="product-title">{{ product.title }}</h3>
                  
                  {%- if product.description != blank -%}
                    <p class="product-description">{{ product.description | strip_html | truncate: 100 }}</p>
                  {%- endif -%}
                  
                  <div class="product-price">
                    {%- if product.compare_at_price > product.price -%}
                      <span class="price-compare">{{ product.compare_at_price | money }}</span>
                    {%- endif -%}
                    <span class="price-current text-metallic">{{ product.price | money }}</span>
                  </div>
                  
                  {%- comment -%} Product Tags {%- endcomment -%}
                  {%- if product.tags.size > 0 -%}
                    <div class="product-tags">
                      {%- for tag in product.tags limit: 2 -%}
                        <span class="product-tag">{{ tag }}</span>
                      {%- endfor -%}
                    </div>
                  {%- endif -%}
                </div>
              </a>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- else -%}
      <div class="collection-empty">
        <div class="empty-content glass-card">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="empty-icon">
            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
            <line x1="3" y1="6" x2="21" y2="6"/>
            <path d="M16 10a4 4 0 0 1-8 0"/>
          </svg>
          <h2 class="empty-title">No products found</h2>
          <p class="empty-description">
            This collection is currently empty. Check back soon for new products!
          </p>
          <a href="{{ routes.all_products_collection_url }}" class="btn-primary">
            Browse All Products
          </a>
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Pagination {%- endcomment -%}
    {%- if paginate.pages > 1 -%}
      <div class="pagination-wrapper fade-in-up">
        <nav class="pagination glass-card" role="navigation" aria-label="Pagination">
          {%- if paginate.previous -%}
            <a href="{{ paginate.previous.url }}" class="pagination-item pagination-prev">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"/>
              </svg>
              Previous
            </a>
          {%- endif -%}
          
          <div class="pagination-numbers">
            {%- for part in paginate.parts -%}
              {%- if part.is_link -%}
                <a href="{{ part.url }}" class="pagination-item">{{ part.title }}</a>
              {%- else -%}
                {%- if part.title == paginate.current_page -%}
                  <span class="pagination-item current">{{ part.title }}</span>
                {%- else -%}
                  <span class="pagination-item">{{ part.title }}</span>
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}
          </div>
          
          {%- if paginate.next -%}
            <a href="{{ paginate.next.url }}" class="pagination-item pagination-next">
              Next
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"/>
              </svg>
            </a>
          {%- endif -%}
        </nav>
      </div>
    {%- endif -%}
  </div>
</section>

{%- endpaginate -%}

<style>
  .collection-main {
    padding: 100px 0;
    background: var(--bg-primary);
    position: relative;
    min-height: 60vh;
  }

  .collection-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 25% 25%, rgba(212, 165, 116, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(230, 193, 148, 0.06) 0%, transparent 50%);
  }

  .collection-header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    margin-bottom: 80px;
    position: relative;
    z-index: 2;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 24px;
    font-size: 14px;
  }

  .breadcrumb-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .breadcrumb-link:hover {
    color: var(--rose-gold);
  }

  .breadcrumb-separator {
    color: var(--text-light);
  }

  .breadcrumb-current {
    color: var(--text-primary);
    font-weight: 500;
  }

  .collection-title {
    margin-bottom: 24px;
  }

  .collection-description {
    margin-bottom: 32px;
  }

  .description-content {
    padding: 32px;
  }

  .featured-image-container {
    padding: 0;
    position: relative;
    overflow: visible;
  }

  .collection-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 24px;
  }

  .image-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(212, 165, 116, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    z-index: -1;
  }

  .collection-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 32px;
    margin-bottom: 40px;
    position: relative;
    z-index: 2;
  }

  .collection-count {
    font-weight: 500;
    color: var(--text-secondary);
    margin: 0;
  }

  .sort-dropdown {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .sort-label {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-primary);
  }

  .sort-select {
    padding: 8px 16px;
    border: 1px solid rgba(212, 165, 116, 0.3);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    font-size: 14px;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sort-select:focus {
    outline: none;
    border-color: var(--rose-gold);
    box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.1);
  }

  .collection-products {
    position: relative;
    z-index: 2;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 40px;
  }

  .product-card {
    padding: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--gradient-glass);
    backdrop-filter: blur(20px);
  }

  .product-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .product-image-container {
    position: relative;
    height: 280px;
    overflow: hidden;
    border-radius: 24px 24px 0 0;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .product-card:hover .product-image {
    transform: scale(1.05);
  }

  .product-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
  }

  .product-badge.new {
    background: var(--gradient-secondary);
    color: white;
  }

  .product-badge.sale {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
  }

  .product-badge.sold-out {
    background: rgba(0, 0, 0, 0.8);
    color: white;
  }

  .product-actions {
    position: absolute;
    top: 16px;
    left: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .product-card:hover .product-actions {
    opacity: 1;
  }

  .action-btn {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--rose-gold);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .action-btn:hover {
    background: var(--gradient-secondary);
    color: white;
    transform: scale(1.1);
  }

  .product-info {
    padding: 24px;
  }

  .product-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .product-description {
    color: var(--text-secondary);
    font-size: 14px;
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  .price-compare {
    color: var(--text-light);
    text-decoration: line-through;
    font-size: 14px;
  }

  .price-current {
    font-size: 18px;
    font-weight: 700;
  }

  .product-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .product-tag {
    background: rgba(212, 165, 116, 0.1);
    color: var(--rose-gold);
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .collection-empty {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
    position: relative;
    z-index: 2;
  }

  .empty-content {
    text-align: center;
    padding: 80px 60px;
    max-width: 500px;
  }

  .empty-icon {
    color: var(--text-light);
    margin-bottom: 24px;
  }

  .empty-title {
    font-size: 28px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 16px;
  }

  .empty-description {
    color: var(--text-secondary);
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .pagination-wrapper {
    margin-top: 80px;
    display: flex;
    justify-content: center;
    position: relative;
    z-index: 2;
  }

  .pagination {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 20px 32px;
  }

  .pagination-numbers {
    display: flex;
    gap: 8px;
    margin: 0 16px;
  }

  .pagination-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    min-width: 40px;
    height: 40px;
    padding: 0 12px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .pagination-item:hover,
  .pagination-item.current {
    background: var(--gradient-secondary);
    color: white;
  }

  @media (max-width: 1024px) {
    .collection-header {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .collection-toolbar {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 32px;
    }

    .pagination {
      flex-wrap: wrap;
      justify-content: center;
    }

    .pagination-numbers {
      order: -1;
      margin: 0 0 16px 0;
    }
  }

  @media (max-width: 640px) {
    .collection-main {
      padding: 80px 0;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }

    .product-info {
      padding: 20px;
    }

    .empty-content {
      padding: 60px 32px;
    }

    .pagination {
      padding: 16px 20px;
    }

    .pagination-item {
      min-width: 36px;
      height: 36px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Sort functionality
    const sortSelect = document.getElementById('SortBy');
    if (sortSelect) {
      sortSelect.addEventListener('change', function() {
        const url = new URL(window.location);
        url.searchParams.set('sort_by', this.value);
        window.location.href = url.toString();
      });
    }

    // Wishlist functionality
    document.querySelectorAll('.wishlist-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Add visual feedback
        this.style.transform = 'scale(1.2)';
        this.style.color = '#e74c3c';
        
        setTimeout(() => {
          this.style.transform = '';
        }, 200);
        
        // Here you would add actual wishlist functionality
        console.log('Added to wishlist');
      });
    });

    // Quick view functionality
    document.querySelectorAll('.quick-view-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Add visual feedback
        this.style.transform = 'scale(1.2)';
        
        setTimeout(() => {
          this.style.transform = '';
        }, 200);
        
        // Here you would open a quick view modal
        console.log('Quick view clicked');
      });
    });
  });
</script>