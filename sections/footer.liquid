{% comment %}
  WET by Lou - Glamorous Footer Section
{% endcomment %}

<footer class="footer-section">
  <div class="footer-background"></div>
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        {%- if section.settings.logo != blank -%}
          <div class="footer-logo">
            {{ section.settings.logo | image_url: width: section.settings.logo_width | image_tag: 
              alt: shop.name, 
              class: 'footer-logo-image',
              width: section.settings.logo_width
            }}
          </div>
        {%- else -%}
          <h3 class="footer-brand-name">{{ shop.name }}</h3>
        {%- endif -%}
        
        {%- if section.settings.brand_description != blank -%}
          <p class="footer-brand-description">{{ section.settings.brand_description }}</p>
        {%- endif -%}

        {%- comment -%} Social Media Links {%- endcomment -%}
        {%- if section.settings.show_social -%}
          <div class="footer-social">
            {%- if section.settings.social_instagram_link != blank -%}
              <a href="{{ section.settings.social_instagram_link }}" class="social-link glass-card" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
                <span class="visually-hidden">Instagram</span>
              </a>
            {%- endif -%}
            
            {%- if section.settings.social_tiktok_link != blank -%}
              <a href="{{ section.settings.social_tiktok_link }}" class="social-link glass-card" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V1h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V8.54a6.33 6.33 0 0 0-1-.05A6.33 6.33 0 0 0 3 14.89a6.34 6.34 0 0 0 10.86 4.43v-7.94a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-.04-2.81z"/>
                </svg>
                <span class="visually-hidden">TikTok</span>
              </a>
            {%- endif -%}

            {%- if section.settings.social_youtube_link != blank -%}
              <a href="{{ section.settings.social_youtube_link }}" class="social-link glass-card" target="_blank" rel="noopener">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/>
                  <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>
                </svg>
                <span class="visually-hidden">YouTube</span>
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
      
      <div class="footer-links">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
              <div class="footer-column">
                {%- if block.settings.heading != blank -%}
                  <h4 class="footer-title">{{ block.settings.heading }}</h4>
                {%- endif -%}
                {%- if linklists[block.settings.menu].links.size > 0 -%}
                  <ul class="footer-list">
                    {%- for link in linklists[block.settings.menu].links -%}
                      <li class="footer-list-item">
                        <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            
            {%- when 'text' -%}
              <div class="footer-column">
                {%- if block.settings.heading != blank -%}
                  <h4 class="footer-title">{{ block.settings.heading }}</h4>
                {%- endif -%}
                {%- if block.settings.subtext != blank -%}
                  <div class="footer-text">{{ block.settings.subtext }}</div>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>

    {%- comment -%} Newsletter Signup {%- endcomment -%}
    {%- if section.settings.newsletter_enable -%}
      <div class="footer-newsletter glass-card">
        <div class="newsletter-content">
          <div class="newsletter-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="newsletter-icon">
              <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
            </svg>
            <div class="newsletter-text">
              <h3 class="newsletter-title">{{ section.settings.newsletter_heading | default: 'Join the WET Circle' }}</h3>
              <p class="newsletter-description">{{ section.settings.newsletter_text | default: 'Be the first to know about new launches and exclusive offers.' }}</p>
            </div>
          </div>
          
          {% form 'customer' %}
            <div class="newsletter-form">
              <div class="form-group-inline">
                <input 
                  type="email" 
                  name="contact[email]"
                  placeholder="{{ section.settings.newsletter_placeholder | default: 'Your email address' }}"
                  class="newsletter-input"
                  required
                />
                <button type="submit" class="btn-primary newsletter-btn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polygon points="12 2 15.09 8.26 22 9 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9 8.91 8.26 12 2"/>
                  </svg>
                  Subscribe
                </button>
              </div>
            </div>
            
            {%- if form.posted_successfully? -%}
              <div class="newsletter-success">
                <p>Thank you for subscribing! âœ¨</p>
              </div>
            {%- endif -%}
            
            {%- if form.errors -%}
              <div class="newsletter-error">
                {%- for error in form.errors -%}
                  <p>{{ error }}</p>
                {%- endfor -%}
              </div>
            {%- endif -%}
          {% endform %}
        </div>
      </div>
    {%- endif -%}
    
    {%- comment -%} Footer Bottom {%- endcomment -%}
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}</p>
        </div>
        
        {%- comment -%} Payment Icons {%- endcomment -%}
        {%- if section.settings.show_payment_icons and shop.enabled_payment_types.size > 0 -%}
          <div class="payment-icons">
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_svg_tag: class: 'payment-icon' }}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background: var(--text-primary);
    color: var(--bg-primary);
    padding: 100px 0 40px;
    position: relative;
    overflow: hidden;
  }

  .footer-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 20%, rgba(212, 165, 116, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(230, 193, 148, 0.08) 0%, transparent 50%);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 80px;
    margin-bottom: 80px;
    position: relative;
    z-index: 2;
  }

  .footer-brand {
    max-width: 350px;
  }

  .footer-logo {
    margin-bottom: 24px;
  }

  .footer-logo-image {
    max-height: 50px;
    width: auto;
    filter: brightness(0) invert(1);
  }

  .footer-brand-name {
    font-size: 28px;
    font-weight: 700;
    background: var(--metallic-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 24px;
  }

  .footer-brand-description {
    color: var(--bg-secondary);
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .footer-social {
    display: flex;
    gap: 16px;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(245, 240, 235, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(212, 165, 116, 0.2);
    border-radius: 50%;
    color: var(--bg-primary);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--gradient-secondary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
  }

  .footer-column {
    /* Column styles */
  }

  .footer-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--bg-primary);
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-list-item {
    margin-bottom: 12px;
  }

  .footer-link {
    color: var(--bg-secondary);
    text-decoration: none;
    font-size: 14px;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-link:hover {
    color: var(--bg-primary);
    padding-left: 4px;
  }

  .footer-text {
    color: var(--bg-secondary);
    line-height: 1.6;
    font-size: 14px;
  }

  .footer-newsletter {
    margin-bottom: 60px;
    padding: 48px;
    background: rgba(245, 240, 235, 0.05);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(212, 165, 116, 0.2);
    position: relative;
    z-index: 2;
  }

  .newsletter-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .newsletter-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 32px;
    text-align: left;
  }

  .newsletter-icon {
    color: var(--rose-gold);
    flex-shrink: 0;
    animation: sparkle 3s ease-in-out infinite;
  }

  .newsletter-title {
    font-size: 24px;
    font-weight: 600;
    background: var(--metallic-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .newsletter-description {
    color: var(--bg-secondary);
    margin: 0;
  }

  .newsletter-form {
    max-width: 500px;
  }

  .form-group-inline {
    display: flex;
    gap: 16px;
  }

  .newsletter-input {
    flex: 1;
    padding: 18px 24px;
    border: 2px solid rgba(212, 165, 116, 0.2);
    border-radius: 50px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    color: var(--bg-primary);
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .newsletter-input::placeholder {
    color: var(--bg-secondary);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--rose-gold);
    box-shadow: 0 0 0 4px rgba(212, 165, 116, 0.1);
  }

  .newsletter-btn {
    padding: 18px 32px;
    min-width: 160px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .newsletter-success {
    margin-top: 16px;
    padding: 12px 20px;
    background: rgba(76, 175, 80, 0.2);
    border: 1px solid rgba(76, 175, 80, 0.3);
    border-radius: 8px;
    color: #4CAF50;
  }

  .newsletter-error {
    margin-top: 16px;
    padding: 12px 20px;
    background: rgba(244, 67, 54, 0.2);
    border: 1px solid rgba(244, 67, 54, 0.3);
    border-radius: 8px;
    color: #F44336;
  }

  .footer-bottom {
    padding-top: 40px;
    border-top: 1px solid rgba(245, 240, 235, 0.2);
    position: relative;
    z-index: 2;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    color: var(--bg-secondary);
    font-size: 14px;
  }

  .payment-icons {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .payment-icon:hover {
    opacity: 1;
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 60px;
      text-align: center;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }

    .newsletter-header {
      flex-direction: column;
      text-align: center;
    }

    .form-group-inline {
      flex-direction: column;
    }

    .newsletter-input {
      margin-bottom: 16px;
    }

    .newsletter-btn {
      width: 100%;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .footer-section {
      padding: 80px 0 30px;
    }

    .footer-content {
      margin-bottom: 60px;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .footer-newsletter {
      padding: 40px 24px;
    }

    .footer-brand {
      margin: 0 auto;
    }
  }
</style>

