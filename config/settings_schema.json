  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n4",
        "label": "Heading font",
        "info": "Selecting a different font can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body font",
        "info": "Selecting a different font can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "unit": "px",
        "label": "Page width",
        "default": 1400
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Sections spacing",
        "default": 0
      }
    ]
  },
  {
    "name": "Product Cards",
    "settings": [
      {
        "type": "header",
        "content": "Product card style"
      },
      {
        "type": "select",
        "id": "card_style",
        "options": [
          {
            "value": "standard",
            "label": "Standard"
          },
          {
            "value": "card",
            "label": "Card"
          }
        ],
        "default": "card",
        "label": "Style"
      },
      {
        "type": "select",
        "id": "card_text_alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center",
        "label": "Text alignment"
      },
      {
        "type": "header",
        "content": "Product card image"
      },
      {
        "type": "select",
        "id": "card_image_padding",
        "options": [
          {
            "value": "0",
            "label": "None"
          },
          {
            "value": "8",
            "label": "Small"
          },
          {
            "value": "16",
            "label": "Medium"
          },
          {
            "value": "32",
            "label": "Large"
          }
        ],
        "default": "0",
        "label": "Image padding"
      },
      {
        "type": "range",
        "id": "card_corner_radius",
        "min": 0,
        "max": 40,
        "step": 4,
        "unit": "px",
        "label": "Corner radius",
        "default": 24
      },
      {
        "type": "header",
        "content": "Product card border"
      },
      {
        "type": "range",
        "id": "card_border_thickness",
        "min": 0,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Border thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "card_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Border opacity",
        "default": 20
      },
      {
        "type": "header",
        "content": "Product card shadow"
      },
      {
        "type": "range",
        "id": "card_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Shadow opacity",
        "default": 15
      },
      {
        "type": "range",
        "id": "card_shadow_horizontal_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Horizontal offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "card_shadow_vertical_offset",
        "min": -40,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Vertical offset",
        "default": 4
      },
      {
        "type": "range",
        "id": "card_shadow_blur",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Blur",
        "default": 20
      }
    ]
  },
